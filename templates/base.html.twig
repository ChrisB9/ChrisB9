<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{{ title |default('Welcome!') }}{% endblock %} | cben.dev</title>
    {% block stylesheets %}
        {% for css in encore_entry_css_files('app') %}
            <link rel="stylesheet" href="{{ preload(asset(css), { as: 'style', nopush: true }) }}">
        {% endfor %}
    {% endblock %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% block metatags %}
    {% endblock %}
    <link rel="manifest" href="manifest.json">

    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="cben.dev">
    <meta name="apple-mobile-web-app-title" content="cben.dev">
    <meta name="theme-color" content="#414a9e">
    <meta name="msapplication-navbutton-color" content="#414a9e">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="msapplication-starturl" content="/">

    <link rel="icon" sizes="96x96" href="/static/favicon-96x96.png">
    <link rel="apple-touch-icon" sizes="96x96" href="/static/favicon-96x96.png">
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" async defer></script>
